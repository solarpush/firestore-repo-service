{
  "name": "@lpdjs/firestore-repo-service",
  "version": "2.0.1",
  "description": "âš¡ Type-safe Firestore ORM with auto-generated repositories, advanced queries, relations with typed select, pagination with include, batch/bulk operations, aggregations and transactions.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "authors": [
    {
      "name": "@LPDJS Pierre Nicolas",
      "email": "pierre@lpdjs.fr"
    }
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsup",
    "build:docs": "bun run --cwd docs/static docs:build",
    "prepublishOnly": "bun run build",
    "test": "bun test test/repo.test.ts",
    "test:watch": "concurrently --kill-others -n emu,test -c cyan,yellow \"bun run emulator\" \"wait-on tcp:8080 && bun test test/repo.test.ts --watch\"",
    "test:run": "bun run test/run-tests.ts",
    "test:start": "bun run test/run-tests.ts --start",
    "test:emulator": "bun run test/emulator-test.ts",
    "emulator": "firebase emulators:start --only firestore --project demo-no-project",
    "emulatorf": "firebase emulators:start --only firestore,functions --project demo-no-project",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "firestore",
    "firebase",
    "firebase-admin",
    "repository",
    "orm",
    "typescript",
    "type-safe",
    "crud",
    "database",
    "query-builder",
    "pagination",
    "relations",
    "populate",
    "batch",
    "bulk",
    "transactions",
    "aggregations",
    "subcollections",
    "collection-group"
  ],
  "author": "LPDJS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solarpush/firestore-repo-service.git"
  },
  "bugs": {
    "url": "https://github.com/solarpush/firestore-repo-service/issues"
  },
  "homepage": "https://frs.lpdjs.fr",
  "peerDependencies": {
    "firebase-admin": "^11.0.0 || ^12.0.0 || ^13.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.0.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {}
}
